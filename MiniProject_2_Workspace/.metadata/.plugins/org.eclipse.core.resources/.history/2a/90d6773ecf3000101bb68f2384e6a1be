package com.usermanagement.controller;

import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PostMapping;

import com.usermanagement.dto.QuoteApiResponseDto;
import com.usermanagement.dto.UserDto;
import com.usermanagement.serviceimpl.UserServiceImpl;

@Controller
public class UserController {

	@Autowired
	private UserServiceImpl userServiceImpl;

	@GetMapping("/")
	public String getLoginPage(Model model) {

		UserDto userDto = new UserDto();

		model.addAttribute("User", userDto);

		return "indexPage";

	}

	@PostMapping("/login")
	public String handleLogin(@ModelAttribute("User") UserDto userDto, Model model) {

		UserDto userLogin = userServiceImpl.userLogin(userDto.getEmail(), userDto.getPassword());

		if (userLogin == null) {

			model.addAttribute("emsg", "Invalid credentials");

			return "indexPage";
		}

		String passwordUpdated = userLogin.getPasswordUpdated();

		if (passwordUpdated.equals("No")) {

			return "restPasswordViewPage";

		} else {

			QuoteApiResponseDto buidDashboard = userServiceImpl.buidDashboard();

			model.addAttribute("Dashboard", buidDashboard);

			return "dashboardPage";
		}
	}

	@GetMapping("/registerPage")
	public String registerPage(Model model) {

		UserDto userDto = new UserDto();

		model.addAttribute("User", userDto);
		
		Map<Integer, String> countries = userServiceImpl.getCountries();
		
		model.addAttribute("Countries", countries);
		
		
		
		return "registerPage";

	}

}
